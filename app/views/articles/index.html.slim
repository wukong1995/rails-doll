.container
  = display_notice_and_alert

  h1 List Articles
  button.js-edit-btn.btn.btn-primary type="button" data-url=new_article_path New
  table.table.table-bordered
    thead
      tr
        th Title
        th Text
        th show
        th edit
        th destroy
    tbody
      - @articles.each do |article|
        tr
          td #{article.title}
          td #{article.text}
          td
            = link_to 'Show', article_path(article)
          td
            button.js-edit-btn.btn.btn-primary type="button" data-url=edit_article_path(article) Edit
          td
            = link_to 'Destroy', article_path(article), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' }
  .modal.fade id="myModal" tabindex="-1" role="dialog" aria-hidden="true"
    .modal-dialog role="document"
      .modal-content

